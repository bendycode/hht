%html{ "xml:lang" => "en", :lang => "en", :xmlns => "http://www.w3.org/1999/xhtml" }
  %head
    %meta{ :content => "text/html;charset=UTF-8", "http-equiv" => "content-type" }
    %title
      Venues: 
      = controller.action_name
    -unless @map.blank?
      %script{:src=>"http://maps.google.com/maps?file=api&v=2.x&key=AIzaSyAi3UsWx-refOisiweAi75rUbRMPiD9jTs", :type=>"text/javascript"}
      %script{:src=>"/javascripts/ym4r-gm.js", :type=>"text/javascript"}
      %style{:type=>"text/css"}
        v:* { behavior:url(#default#VML);}
      = @map.to_html
    = stylesheet_link_tag 'scaffold'
  %body
    %p{ :style => "color: green" }
      = flash[:notice]
    = yield
